                <h2>Iniciar Sesión</h2>
                <p>Usuario</p>
                <input type="text" id="user" name="user">
                <p>Contraseña</p>
                <input type="password" id="contra" name="contra">
                <p></p>
                <input type="submit" value="Enviar" onclick="inicio_sesion()" class="envio">
